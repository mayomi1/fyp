<!-- //banner -->
<div class="ads-grid_shop">
  <div class="shop_inner_inf">
    <h3 class="head">Hi, please select like for the product that you like to order</h3>
    <div class="inner_section_w3ls" style="margin: 0 auto; width: 70%;">

      <div class="row">

        <form action="/select-product" method="post">
      {{#categoryResult}}
        <div class="col-sm-4" style="margin-bottom: 20px">
          <div class="card">
            <div class="card-body">
              <input type="checkbox" value="{{_id}}" name="selected_products"/>
              <h5 class="card-title">{{category}}</h5>
              <img src="uploads/{{product_image}}" class="card-img-top" alt="...">
              <p class="card-text">{{product_name}}</p>
              <button class="btn btn-primary">{{price}}</button>
            </div>
          </div>
        </div>
      {{/categoryResult}}
          <button type="submit">Submit Products</button>
        </form>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

