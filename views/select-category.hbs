<div class="ads-grid_shop">
  <div class="shop_inner_inf">
    <h3 class="head">Hi, please select the products are most interest in</h3>
    <div class="inner_section_w3ls row" style="margin: 0 auto; width: 70%;">
      <form method="post" action="/select-category">
        {{#each productCategory}}
          <div class="col-md-3 contact_grid_right text-center select-category">
            <input value="{{this}}" type="checkbox" name="checkedCategory">
            <label>{{this}}</label>
          </div>
        {{/each}}
        <input type="hidden" name="userId" value="{{user._id}}">

        <input type="submit"  class="contact_grid_right" value="CONTINUE">

      </form>

    </div>
    <div class="clearfix"></div>
  </div>
</div>

