<div class="ads-grid_shop">
  <div class="shop_inner_inf">
    <h3 class="head">Upload Product</h3>

    {{#if message}}
      <div class="text-center alert alert-danger alert-dismissible show" role="alert">
        <strong>{{message}}</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    {{/if}}


    {{message}}
    <div class="inner_section_w3ls row">
      <div class="col-md-6 contact_grid_right col-md-offset-4">
        <form action="/upload_product" method="post" enctype="multipart/form-data">
          <div class="contact_left_grid">
            <input type="text" name="product_name" placeholder="Product Name" required="">
          </div>
          <div class="contact_left_grid">
            <select name="category">
              <option>choose category</option>
              <option value="shoe">Shoe</option>
              <option value="bag">Bag</option>
              <option value="home and kitchens">Home and kitchens</option>
              <option value="electronics">Electronics</option>
              <option value="computers">Computers</option>
              <option value="books">Books</option>
            </select>
          </div>
          <div class="contact_left_grid">
            <input type="text" name="price" placeholder="Price" required="">
          </div>
          <div class="contact_left_grid">
            <input type="text" name="description" placeholder="Description" required="">
          </div>
          <div class="contact_left_grid">
            <input type="file" name="product_image" placeholder="Product Image" required="">
          </div>
          <div class="clearfix"> </div>
          <div>
            <input type="submit" value="Add Product">
          </div>
        </form>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
